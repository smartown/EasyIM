<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relay_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rec_white_8dp"
    android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="@dimen/dp64"
        android:layout_height="@dimen/dp64"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/iv_product"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp14"
        tools:text="上过是是是阿斯达阿斯达阿斯顿撒大声道" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_product"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/iv_product"
        android:textColor="@color/_ff4239"
        android:textSize="@dimen/sp12"
        tools:text="￥100.00" />
</RelativeLayout>